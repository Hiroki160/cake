<section class="hero is-info">
  <div class="hero-body">
    <div class="container">

<h2>管理者ログイン</h2>

    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">

<%= form_with model: @admin, url: new_admin_session_path do |f| %>


    <div class="mb-3">
      <%= f.label :メールアドレス, class: "col-form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "username", class: "form-control" %>
    </div>

    </div>
  </div>

    <div class="mb-3">
      <%= f.label :パスワード, class: "col-form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", :placeholder => "password", class: "form-control" %>
    </div>

  <div class="actions text-center">
    <%= f.submit "ログイン", class: 'btn btn-success' %>
  </div>
<% end %>

<%= render "admin/shared/links" %>

      </div>
    </div>
  </div>
</section>
