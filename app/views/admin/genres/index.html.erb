<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h3 class="title">
        ジャンル一覧・追加<br><br>
      </h3>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>



    <div class="field form-inline">
      <p style="margin-right:5%;">ジャンル名</p>
      <div class="field" style="margin-right:5%;">
    <%= f.text_field :name %>
      </div>
    <%= f.submit '新規登録', class: 'btn btn-success' %>
  <% end %>

  <table class="table table-bordere" style="margin-top:5%;">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
    </div>

      </div>
    </div>
  </div>
</section>

