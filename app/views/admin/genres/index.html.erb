<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ジャンル一覧・追加
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
<%= form_with model: @genre, url: admin_genres_path do |f| %>

    <div class="field">
      <p>ジャンル名</p>
      <div class="field">
    <%= f.text_area :name %>
      </div>
    <%= f.submit '新規登録', class: 'btn btn-primary' %>
  <% end %>


  <table class="table table-bordere">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
    </div>

      </div>
    </div>
  </div>
</section>

