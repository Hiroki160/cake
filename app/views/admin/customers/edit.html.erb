<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h3 class="title">
        <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集
      </h3>
    </div>
  </div>
</section>


<%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>

  <div class="field form-inline">
    <p style="margin-right:1%;">会員ID</p>
      <div class="field" style="margin-right:1%;"><%= @customer.id %></div>
  </div>

  <div class="field form-inline">
    <p style="margin-right:1%;">氏名</p>
    <p style="margin-right:1%;">(姓)</p>
      <div class="field" style="margin-right:1%;"><%= f.text_field :last_name %></div>
    <p style="margin-right:1%;">(名)</p>
      <div class="field" style="margin-right:1%;"><%= f.text_field :first_name %></div>
  </div>

  <div class="field form-inline">
    <p style="margin-right:1%;">フリガナ</p>
    <p style="margin-right:1%;">(セイ)
      <div class="field" style="margin-right:1%;"><%= f.text_field :last_name_kana %></div>
    <p style="margin-right:1%;">(メイ)</p>
      <div class="field" style="margin-right:1%;"><%= f.text_field :first_name_kana %></div>
  </div>

  <div class="field form-inline">
    <p style="margin-right:1%;">郵便番号(ハイフンなし)</p>
      <div class="field" style="margin-right:1%;"><%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %></div>
  </div>

  <div class="field form-inline">
    <p style="margin-right:1%;">住所</p>
      <div class="field" style="margin-right:1%;"><%= f.text_field :address, autofocus: true, autocomplete: "email" %></div>
  </div>

 <div class="field form-inline">
    <p style="margin-right:1%;">電話番号(ハイフンなし)</p>
      <div class="field" style="margin-right:1%;"><%= f.text_field :telephone_number, autofocus: true, autocomplete: "email" %></div>
  </div>

  <div class="field form-inline">
    <p style="margin-right:1%;">メールアドレス</p>
      <div class="field" style="margin-right:1%;"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>

  <div class="field form-inline">
    <h4 style="margin-right:5%;">会員ステータス</h4>
    <p class="field" style="margin-right:5%;"><%= @customer.email %></p>
  </div>

  <%= f.submit '変更を保存', class: 'btn btn-primary' %>

<% end %>



