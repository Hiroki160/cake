<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h3 class="title">
        会員一覧<br><br>
      </h3>
    </div>
  </div>
</section>

<table class="table">
	<thead>
		<tr>
			<th>会員ID</th>
			<th>氏名</th>
			<th>メールアドレス</th>
			<th>ステータス</th>
		</tr>
	</thead>

	<body>
	  <% @customers.each do |customer| %>
	  <tr>
	    <td><%= customer.id %></td>
	    <td style>
	    <%= link_to customer.last_name, admin_customer_path(customer.id) %>
	    <%= link_to customer.first_name, admin_customer_path(customer.id) %>
	    </td>
	    <td><%= customer.email %></td>
	  </tr>
	  <% end %>
	</body>