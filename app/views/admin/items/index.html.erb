<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h3 class="title">
        商品一覧<br><br>
        
  				<%= link_to new_admin_item_path, class: "btn btn btn-secondary text-white", method: :get do %>
            <i class="fa-solid fa-hexagon-plus"></i>
        
        <% end %>
      </h3>
    </div>
  </div>
</section>

<!--<div class="container-fluid">-->
<!--	<div class="row">-->
<!--		<div class="col-md-12">-->
			<table class="table">
				<thead>
					<tr class="table-active">
						<th>商品ID</th>
						<th>商品名</th>
						<th>税抜価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
					</tr>
				</thead>

				<tbody>
				  <% @items.each do |item| %>
					<tr>
						<td><%= item.id %></td>
					  <td><%= link_to item.name, admin_item_path(item.id) %></td>
						<td><%= item.price %></td>
						<td><%= item.genre.name %></td>
						<td>
						  <% if item.is_active == true %>
						  販売中
						  <% else %>
						  販売停止中
						  <% end %>
						</td>
					</tr>
				<% end %>
				</tbody>
			</table>

