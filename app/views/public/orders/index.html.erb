<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h3 class="title">
        注文履歴一覧
      </h3>
    </div>
  </div>
</section>

<table class="table">
  <thead>
  	<tr>
  		<th>注文日</th>
  		<th>配送先</th>
  		<th>注文商品</th>
  		<th>支払金額</th>
  		<th>注文詳細</th>
  	</tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.address %></td>
        <td><%= cart_item.item.name %></td>
        <td><%= order.total_payment %></td>
        <td></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

