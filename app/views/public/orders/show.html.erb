<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h3 class="title">
        注文履歴詳細
      </h3>
    </div>
  </div>
</section>

<div>注文情報</div>

<table style="margin-bottom:5%;">
  <tr><th>注文日</th><td><%= @order.created_at %></td></tr>
  <tr><th>配送先</th><td><%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td></td></tr>
  <tr><th>支払い方法</th><td><%= @order.payment_method %></td></tr>
</table>

<div>請求情報</div>
<table style="margin-bottom:2%;">
  <tr><th>商品合計</th><td></td></tr>
  <tr><th>配送料</th><td><%= @order.carriage %></td></tr>
  <tr><th>ご請求額</th><td><%= @order.total_payment %></td></tr>
</table>

<div>注文内容</div>
<table class="table">
  <thead class="table-active">
  	<tr>
  		<th>商品</th>
  		<th>単価（税込）</th>
  		<th>個数</th>
  		<th>小計</th>
  	</tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.price * order_detail.amount %></td>
      </tr>
    <% end %>
  </tbody>
</tabel>

