

<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h3 class="title">
        商品一覧 (全<%= @items.count %>件)
      </h3>


<tbody>
  <% @items.each do |item| %>
    <tr>
      <td>
        <%= link_to item_path(item.id) do %>
        <%= image_tag item.image, size: "200x200" %>
        <% end %>
      </td>
      <td><%= link_to item.name, item_path(item.id) %></td>
      <td><th>￥<%= (item.price * 1.1).to_i %></th></td>
    </tr>

  <% end %>
</tbody>

   </div>
  </div>
</section>