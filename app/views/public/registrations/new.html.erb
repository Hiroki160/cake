<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h3 class="title">
        新規登録画面
      </h3>
    </div>
  </div>
</section>


<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :名前, class: "label" %>
      <span>(姓)</span><%= f.text_field :last_name, :placeholder => "姓", class: "form-control" %>
     <%= f.label :名前, class: "label" %>
      <span>(名)</span><%= f.text_field :first_name, :placeholder => "名", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :メールアドレス, class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :郵便番号（ハイフンなし）, class: "form-label" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :住所, class: "form-label" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :電話番号（ハイフンなし）, class: "form-label" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :パスワード（６文字以上）, class: "form-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",  class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :パスワード（確認用）, class: "form-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>
  
    <div class="col text-center">
      <%= f.submit '新規登録', class: 'btn btn-success' %>
    </div>
<% end %>

<p>既に登録済みの方</p>

<%= render "public/shared/links" %>
        </div>
      </div>
    </div>
  </section>
