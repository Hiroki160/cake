<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h3 class="title">
        配送先登録/一覧<br><br>
      </h3>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">

        <%= form_with model: @address, url: addresses_path do |f| %>
          <div class="form-group">
           <label>郵便番号（ハイフンなし）</label>
           <%= f.text_field :postal_code, class: "form-control" %>
          </div>

          <div class="form-group">
          <label>住所</label>
           <%= f.text_field :address, class: "form-control" %>
          </div>

          <div class="form-group">
          <label>宛名</label>
           <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="col text-center">
            <%= f.submit '新規登録', class: 'btn btn-success'  %>
          </div><br>

        <% end %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">郵便番号</th>
      <th scope="col">住所</th>
      <th scope="col">宛名</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>

    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address.id), class: 'btn btn-success' %>
      <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger' %></td>
    </tr>
  </tbody>
    <% end %>
  </tbody>
</table>


      </div>
    </div>
  </div>
</section>